{
  "manifest_version": 2,
  "name": "My Cool Extension",
  "version": "0.1",
  "content_security_policy": "script-src 'self' http://localhost:8000 'unsafe-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  }
}
